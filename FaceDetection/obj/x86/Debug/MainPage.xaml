<Page
    x:Class="FaceDetection.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FaceDetection"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:ConnectionId='1' x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="720"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="theSplitView.DisplayMode" Value="CompactInline"/>
                        <Setter Target="theSplitView.IsPaneOpen" Value="True"/>
                        <Setter Target="Hamburger.Visibility" Value="Collapsed"/>
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:ConnectionId='2' x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="theSplitView.DisplayMode" Value="Overlay"/>
                        <Setter Target="Hamburger.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Button x:ConnectionId='3' Name="Hamburger" 
                FontFamily="Segoe MDL2 Assets" 
                Content="&#xE700;" 
                FontSize="18" 
                VerticalAlignment="Top"
                Margin="10,10,0,0"
                                       />

        <SplitView x:ConnectionId='4' Name="theSplitView"             
                   DisplayMode="CompactInline" 
                   OpenPaneLength="200" 
                   CompactPaneLength="56" 
                   HorizontalAlignment="Left">

            <SplitView.Pane>
                <ListBox x:ConnectionId='5' Name="MenuListBox" SelectionMode="Single">
                    <ListBoxItem x:ConnectionId='6' Name="ListBoxItem0">
                        <Button x:ConnectionId='9' Name="ListBoxHamburger" 
                                FontFamily="Segoe MDL2 Assets" 
                                Content="&#xE700;" 
                                FontSize="18"                               
                                                       />
                    </ListBoxItem>

                    <ListBoxItem x:ConnectionId='7' Name="ListBoxItem1">
                        <Button x:ConnectionId='8' x:Name="PickButton"                          HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Row="1">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xEC50;" FontSize="18"/>
                        </Button>
                    </ListBoxItem>
                </ListBox>
            </SplitView.Pane>
            <Grid Margin="100,50,40,50">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid x:ConnectionId='10' x:Name="PictureDisplay" Grid.Row="0" HorizontalAlignment="Center">
                    <Viewbox Stretch="Uniform">
                        <Canvas x:ConnectionId='12'  x:Name="ImageCanvas" Width="720" Height="500">
                            <Image x:ConnectionId='13' x:Name="SelectedImage" Stretch="Uniform" Source="/Assets/default.jpg"/>
                        </Canvas>
                    </Viewbox>
                </Grid>
                <Border Grid.Row="1" Background="#11000000" Margin="0,10,0,0">
                    <TextBlock x:ConnectionId='11' x:Name="ResultText"                          
                               Text="" 
                               TextWrapping="Wrap" 
                               FontSize="30"                                
                               VerticalAlignment="Top"
                               IsTextSelectionEnabled="True"/>
                </Border>
            </Grid>
        </SplitView>
    </Grid>
</Page>

